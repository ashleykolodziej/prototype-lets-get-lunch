<template>
  <div class="page" data-name="product">
    <div class="navbar">
      <div class="navbar-bg"></div>
      <div class="navbar-inner sliding">
        <div class="left">
          <a href="/plans/" class="link back">
            <i class="icon icon-back"></i>
            <span class="if-not-md">Plans</span>
          </a>
        </div>
        <div class="title-large"><div class="title-large-text">Confirmed</div></div>
      </div>
    </div>
    <div class="page-content">
    	<div class="block block-title-large margin-bottom text-align-center">That's a wrap!</div>
      <div class="block block-strong inset">
